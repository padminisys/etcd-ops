apiVersion: v1
kind: Service
metadata:
  name: etcd-client-nodeport
  namespace: apisix
  labels:
    app: etcd
    component: database
    version: v3.6.0
spec:
  type: NodePort
  selector:
    app: etcd
  ports:
  - name: client
    protocol: TCP
    port: 2379          # service port
    targetPort: 2379    # etcd container
    nodePort: 32379     # external port on each node (open this on your firewalls)
  externalTrafficPolicy: Cluster
